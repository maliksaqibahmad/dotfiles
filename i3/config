# i3 config file

# Font for window titles and bar
font pango:JetBrains Mono 10

# Start i3bar to display a workspace bar
bar {
   status_command i3status
   position top
   font pango:JetBrains Mono 8
}

# Set mod key to Alt
set $mod Mod1

# Dmenu
bindsym $mod+d exec dmenu_run

# Font for window titles
# font pango:monospace 9

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Start a terminal (kitty)
bindsym $mod+Return exec kitty

# Kill focused window
bindsym $mod+Shift+q kill

# Apps
bindsym $mod+m exec code
bindsym $mod+b exec google-chrome-stable
bindsym $mod+n exec dolphin
bindsym $mod+i exec spotify

# Change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# Split in horizontal orientation
bindsym $mod+h split h

# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent

# Define names for default workspaces
set $ws1 "1:Chrome"
set $ws2 "2:VSCode"
set $ws3 "3:Spotify"
set $ws4 "4 Obsidian"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Assign applications to specific workspaces

assign [class="google-chrome-stable"] $ws1
assign [class="Code"] $ws2
assign [class="Spotify"] $ws3
assign [class="obsidian"] $ws4

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # Back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Remove window borders for all windows except the active one
for_window [class="^.*"] border pixel 0
for_window [class="^.*"] border pixel 1
for_window [class="^.*"] border none

# Autostart applications
exec --no-startup-id picom -b
exec --no-startup-id nitrogen --restore
exec --no-startup-id kitty
exec --no-startup-id dunst
exec --no-startup-id caffeine
exec --no-startup-id redshift-gtk
exec --no-startup-id kdeconnectd
exec --no-startup-id kdeconnect-indicator
exec --no-startup-id xmodmap ~/.Xmodmap

# Scratchpad terminal using Kitty
exec --no-startup-id kitty
for_window [class="kitty"] move scratchpad, resize set 1000 700

# Show/hide scratchpad terminal
bindsym $mod+grave [class="kitty"] scratchpad show, move position center

# Volume control

# Increase volume
bindsym $mod+F6 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%

# Decrease volume
bindsym $mod+F7 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%

# Mute/Unmute volume
bindsym $mod+F8 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness control

# Brightness down (Mod+F9)
bindsym $mod+F9 exec --no-startup-id brightnessctl set 5%-

# Brightness up (Mod+F10)
bindsym $mod+F10 exec --no-startup-id brightnessctl set +5%

# Media controls

# Previous track (Mod+F3)
bindsym $mod+F3 exec --no-startup-id playerctl previous

# Play/Pause (Mod+F4)
bindsym $mod+F4 exec --no-startup-id playerctl play-pause

# Next track (Mod+F5)
bindsym $mod+F5 exec --no-startup-id playerctl next

# Screenshots
bindsym Print exec --no-startup-id scrot -s
bindsym $mod+Print exec --no-startup-id scrot

# Lock screen
bindsym $mod+shift+x exec i3lock -c 000000

# Set wallpaper using feh
exec_always --no-startup-id feh --bg-fill ~/Pictures/Wallpaper.jpg
